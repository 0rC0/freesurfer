#!/bin/csh -f
# Get Ico Order

if( $#argv != 1 ) then
  echo "USAGE: geticoorder icosize"
  echo " "
  echo "     Order  Number of Vertices"
  echo "        0              12"
  echo "        1              42"
  echo "        2             162"
  echo "        3             642"
  echo "        4            2562"
  echo "        5           10242"
  echo "        6           40962"
  echo "        7          163842"
  echo " "
  exit 1;
endif

set icosize = $argv[1];

switch ( $icosize )

   case 12: 
     echo     0; exit 0; 
     breaksw;
   case 42: 
     echo     1; exit 0; 
     breaksw;
   case 162: 
     echo     2; exit 0; 
     breaksw;
   case 642: 
     echo     3; exit 0; 
     breaksw;
   case 2562: 
     echo     4; exit 0; 
     breaksw;
   case 10242: 
     echo     5; exit 0; 
     breaksw;
   case 40962: 
     echo     6; exit 0; 
     breaksw;
   case 163842: 
     echo     7; exit 0; 
     breaksw;

   default: 
     echo -1;    exit 1; 
     breaksw;

endsw

# should never get here

exit 0;

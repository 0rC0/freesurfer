if($#argv != 1) then
  echo "USAGE: getnframes stem "
  echo '$Id: getnframes,v 1.3 2007/07/23 17:41:28 greve Exp $'
  exit 1;
endif

set stem = $argv[1];
set fname = `stem2fname $stem`;
if($status) then
  echo "$fname"
  exit 1;
endif

set cmd = (mri_info --o /tmp/$$.tmp --nframes $fname);
$cmd >& /dev/null
if($status) then
  echo "ERROR: with $cmd"
  exit 1;
endif

set nframes = `cat /tmp/$$.tmp`
echo $nframes

rm /tmp/$$.tmp

exit 0;
#-----------------------------------------------------

set firstslice = `getfirstsliceno $stem`
set st = $status;
if($st) then
  echo "ERROR: cannot find any files with $stem";
  exit 1;
endif

set hdr = `printf "%s_%03d.hdr" $stem $firstslice`
if(! -e $hdr) then
  echo "ERROR: cannot find $hdr"
  exit 1;
endif

set tmp = `cat $hdr`;
set nframes = $tmp[3];

echo $nframes;

exit 0;
##########################################

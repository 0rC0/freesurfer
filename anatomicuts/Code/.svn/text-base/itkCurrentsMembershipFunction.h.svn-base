#ifndef __itkCurrentsMembershipFunction_h
#define __itkCurrentsMembershipFunction_h

#include "itkNumericTraits.h"

#include "itkMeasurementVectorTraits.h"

#include "itkDistanceToCentroidMembershipFunction.h"
namespace itk { 

    template< class TVector >
    class CurrentsMembershipFunction : public DistanceToCentroidMembershipFunction< TVector >
    {
      public:
      typedef CurrentsMembershipFunction Self;
      typedef DistanceToCentroidMembershipFunction<TVector> Superclass;
      typedef SmartPointer<Self> Pointer;
      typedef SmartPointer<const Self> ConstPointer;
      
      itkTypeMacro(CurrentsMembershipFunction, DistanceToCentroidMembershipFunction);
      itkNewMacro(Self);
      
      typedef TVector MeasurementVectorType;
      
     typedef typename Superclass::MeasurementVectorSizeType
      MeasurementVectorSizeType;
      
      
      double Evaluate(const MeasurementVectorType &measurement) const;
      
      protected:
      CurrentsMembershipFunction(void);
      virtual ~CurrentsMembershipFunction(void) {}

    };

}      
#endif

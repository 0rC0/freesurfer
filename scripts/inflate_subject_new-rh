#! /bin/tcsh -f
pushd $SUBJECTS_DIR/$1/
touch NOTES
echo " " >> NOTES
echo $0 $* >> NOTES
whoami >> NOTES
date >> NOTES
hostname >> NOTES
popd

pushd $SUBJECTS_DIR/$1/scripts
mri_tessellate ../mri/filled 127 ../surf/rh.orig_$2
mris_smooth ../surf/rh.orig_$2 ../surf/rh.smoothwm_$2
mris_inflate ../surf/rh.smoothwm_$2 ../surf/rh.inflated_$2
popd

#!/bin/tcsh -ef

setenv GCA $FREESURFER_HOME/average/young_new_b.gca
setenv LTA talairach.lta

setenv s $1

set sdir = $SUBJECTS_DIR/$s/mri
foreach d (fsamples norm transforms)
	mkdir -p $sdir/$d ;\
end


mri_em_register -mask $sdir/brain -p .5 -fsamples $sdir/fsamples -norm $sdir/norm $sdir/orig $GCA $sdir/transforms/$LTA


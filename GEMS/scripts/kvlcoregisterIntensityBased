# Start with rigid registration of whole-brain ICBM452 template, initialized by aligning
# center of image grids. Apply the same transformation to the masked hippocampal template.
command="kvlRegister template.mgz nu.mgz 6 1 20 1 hippocampusTemplateMasked.mgz";
echo $command
eval $command


# Continue from the result, using fully affine registration. Apply the same transformation again
# to the (previously transformed) masked hippocampal template.
command="kvlRegister template_coregistered.mgz nu.mgz 12 0 20 1 hippocampusTemplateMasked_coregistered.mgz";
echo $command
eval $command


# Continue a local rigid registration of the transformed, masked hippocampal template. Don't use
# multi-resolution scheme
command="kvlRegister hippocampusTemplateMasked_coregistered_coregistered.mgz nu.mgz 6 0 20 0";
echo $command
eval $command


# View the result
command="kvlResample nu.mgz hippocampusTemplateMasked_coregistered_coregistered_coregistered.mgz";
echo $command
eval $command

command="kvlViewImage nu_resampled.mgz &";
echo $command
eval $command

command="kvlViewImage hippocampusTemplateMasked_coregistered_coregistered_coregistered.mgz &";
echo $command
eval $command




else
  #####
  # GL
  #####
  ac_gl_includes="NO"
  ac_gl_libraries="NO"
  ac_gl_bindir="NO"
  # these are lower-case because later AX_CHECK_GL trounces
  # GL_CLFLAGS and GL_LIBS:
  gl_cflags=""
